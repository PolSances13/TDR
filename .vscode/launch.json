{
    "version": "0.2.0",
    "tasks": [
        {
            "label": "Build with LuaLaTeX and shell escape",
            "type": "shell",
            "command": "lualatex",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "configurations": [
    
    ]
}